{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": ["src/*"]
}
